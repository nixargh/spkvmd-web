<h1>Administration Page</h1>
<p>Список виртуальных машин.</p>
<table>
	<tr align="center" bgcolor="#999999">
		<td><b>VM Name</b></td>
		<% @vm_list.values.first.each_key do |stat_name| %>
			<td><b><%= stat_name %></b></td>
		<% end %>
		<td><b>actions</b></td>
		<td><b>VNC connection</b></td>
	</tr>
	<% @vm_list.each do |vm, info| %>
		<tr>
			<td><b><%= vm %></b></td>
			<% info.each_value do |stat| %>
				<td><%= stat %></td>
			<% end %>
			<td>
				<% if running?(vm) %>
					<%= link_to 'Stop', :controller=>'vms', :action=>'stopvm', :vm => vm %>
				<% else %>
					<%= link_to 'Start', :controller=>'vms', :action=>'startvm', :vm => vm %>
				<% end %>
			</td>
			<td><%= link_to 'VNC', :controller=>'vms', :action=>'vnc', :vm => vm %></td>
		</tr>
	<% end %>
</table>
